<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RelativeStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ScrollViewStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/android_padding</item>
        <item name="android:layout_margin">@dimen/android_margin</item>
    </style>

    <style name="LinearHorizontalStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:padding">@dimen/android_padding</item>
        <item name="android:background">@color/backgroundColor2</item>
    </style>

    <style name="LinearVerticalStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:padding">@dimen/android_padding</item>
        <item name="android:background">@color/backgroundColor2</item>
    </style>

    <style name="outerLinearVerticalStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="ButtonStyle1" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColor1</item>
        <item name="android:textSize">@dimen/android_TextSize1</item>
        <item name="android:background">@color/backgroundColor1</item>
    </style>

    <style name="SeekBarStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:max">100</item>
        <item name="android:progress">60</item>
    </style>

    <style name="TextStyle1" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColor2</item>
        <item name="android:textSize">@dimen/android_TextSize1</item>
        <item name="android:background">@color/backgroundColor2</item>
    </style>

    <style name="TextStyle2" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColor1</item>
        <item name="android:textSize">@dimen/android_TextSize2</item>
        <item name="android:background">@color/backgroundColor1</item>
        <item name="android:layout_marginBottom">@dimen/android_margin</item>
    </style>

    <style name="TextStyle3" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColor2</item>
        <item name="android:textSize">@dimen/android_TextSize1</item>
        <item name="android:background">@color/backgroundColor2</item>
        <item name="android:padding">@dimen/android_padding</item>
        <item name="android:layout_marginBottom">@dimen/android_Big_margin</item>
    </style>

    <style name="buttonPremiumStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColor2</item>
        <item name="android:textSize">@dimen/android_TextPremium</item>
        <item name="android:background">@color/backgroundColor2</item>
        <item name="android:padding">@dimen/android_padding</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="SearchStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColor1</item>
        <item name="android:background">@color/backgroundColor2</item>
        <item name="android:textSize">@dimen/android_TextSize2</item>
        <item name="android:layout_marginBottom">@dimen/android_margin</item>
    </style>
</resources>
